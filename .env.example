# Telegram Bot Configuration
BOT_TOKEN=your_telegram_bot_token_from_botfather

# API Configuration
API_BASE_URL=http://remnawave:3000
API_TOKEN=your_api_token

# Admin Configuration
ADMINS=123456789,987654321

# Localization
DEFAULT_LOCALE=ru

# Logging
LOG_LEVEL=INFO

# Notifications (optional)
# ID of group/channel for notifications about user creation/update/deletion
NOTIFICATIONS_CHAT_ID=-1001234567890
# ID of topic in group (optional, if not specified - sent to general chat)
NOTIFICATIONS_TOPIC_ID=123

# Separate topics for different notification types (optional)
# If not specified, NOTIFICATIONS_TOPIC_ID will be used as fallback
NOTIFICATIONS_TOPIC_USERS=456      # User events (created, updated, deleted, expired, etc.)
NOTIFICATIONS_TOPIC_NODES=789      # Node events (created, modified, connection_lost, etc.)
NOTIFICATIONS_TOPIC_SERVICE=101    # Service events (panel_started, login_attempt, etc.)
NOTIFICATIONS_TOPIC_HWID=102       # HWID device events
NOTIFICATIONS_TOPIC_CRM=103        # Billing/infrastructure events
NOTIFICATIONS_TOPIC_ERRORS=104     # Error notifications
NOTIFICATIONS_TOPIC_VIOLATIONS=105 # Violation/suspicious user notifications

# Port webhook server (по умолчанию 8080)
WEBHOOK_PORT=8080

# Secret Key webhook (recommended 32 symbol)
# Generate the key with the command: openssl rand -hex 64
WEBHOOK_SECRET=ваш_секретный_ключ_минимум_32_символа

# ============================================
# Database Configuration (PostgreSQL) - REQUIRED
# ============================================
# Set your credentials BEFORE first start!
# After first start, changing these will NOT update the database.

# PostgreSQL container credentials (REQUIRED - set before first start!)
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_secure_password_here

# Database name (optional, default: remnawave_bot)
POSTGRES_DB=remnawave_bot

# Connection URL for bot (must match credentials above!)
# Format: postgresql://USER:PASSWORD@remnawave-admin-db:5432/DATABASE
DATABASE_URL=postgresql://your_db_user:your_secure_password_here@remnawave-admin-db:5432/remnawave_bot

# Connection pool settings (optional)
DB_POOL_MIN_SIZE=2
DB_POOL_MAX_SIZE=10

# Sync interval in seconds - how often to sync data from API to DB (optional, default: 300)
SYNC_INTERVAL_SECONDS=300
