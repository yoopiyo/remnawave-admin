# Telegram bot token from @BotFather
BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN

# Remnawave API (use http://remnawave:3000 when bot and panel are in the same Docker network)
API_BASE_URL=http://remnawave:3000
API_TOKEN=YOUR_JWT_OR_BEARER_TOKEN

# Localization: ru or en
DEFAULT_LOCALE=ru

# Comma-separated list of admin Telegram user IDs
ADMINS=123456789,987654321

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Cache lifetime in seconds (default is 60)
CACHE_TTL=60.0